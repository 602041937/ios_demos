source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '10.0'
use_frameworks!

target 'HPDDemos' do
    # 网络加载框架
    pod 'Alamofire', '~> 4.7'
    # 网络加载框架的实体类解析
    pod 'AlamofireObjectMapper', '~> 5.0'
    # Toast
    pod 'Toast-Swift', '~> 3.0.1'
    # 加载控件
    pod 'MBProgressHUD', '~> 1.1.0'
    # 不依赖view的toast https://github.com/devxoul/Toaster
    pod 'Toaster'
    #    https://github.com/williamFalcon/SwiftTryCatch
    pod 'SwiftTryCatch'
end
